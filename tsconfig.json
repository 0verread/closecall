{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "outDir": "dist",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,     
    "esModuleInterop": true,       
    "strict": true,                                      
    "noUncheckedIndexedAccess": true,                 
    "skipLibCheck": true                                 
  }
}